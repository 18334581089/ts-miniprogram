.auth_main {
  overflow: hidden;
  position: relative;
}
.auth_main > image {
  width: 100%;
  height: 100%;
  vertical-align: top;
  filter: blur(4px);
}
.auth_main > .auth_box {
  position: absolute;
  bottom: 10%;
  width: 100%;
}
.auth_main > .auth_tip {
  position: absolute;
  top: 15%;
}
.auth_main > .auth_tip > view {
  width: 92%;
  margin: 0 auto;
  background-color: rgba(255,255,255,0.80);
  border-radius: 20rpx;
  text-align: center;
  padding: 120rpx 0;
}
.auth_main > .auth_tip image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 40rpx;
}
.auth_main > .auth_tip text {
  line-height: 50rpx;
  font-size: 32rpx;
  color: #303133;
}