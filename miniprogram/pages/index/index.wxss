.index_main {
  display: flex;
  flex-direction: column;
  position: relative;
}

.index_input {
  line-height: 90rpx;
  padding: 15rpx 22rpx;
  position: relative;
}

.index_input>input {
  background-color: Fff;
  border-radius: 60rpx;
  line-height: 60rpx;
  height: 60rpx;
  border: 1px solid E8E8E8;
  padding-left: 15rpx;
  padding-right: 140rpx;
}

.index_input view {
  position: absolute;
  top: 15rpx;
  right: 45rpx;
  display: flex;
  align-items: center;
  line-height: 60rpx;
}

.index_input text {
  color: var(--color-mian);
}

.index_input image {
  height: 28rpx;
  width: 28rpx;
  margin-right: 12rpx;
  border-left: 1px solid #ddd;
  padding-left: 20rpx;
}

.index_main > scroll-view {
  flex: 1;
  height: 100%;
  overflow: hidden;
}
.index_list {
  padding-bottom: 18%;
}

.index_btn {
  position: absolute;
  bottom: 3%;
  width: 100%;
}

.index_list>.list_item {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.list_item>view:first-child {
  padding: 0 25rpx;
  border-bottom: 1px solid #F3F3F3;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list_item .name {
  color: #303133;
  font-weight: 700;
  font-size: 32rpx;
  line-height: 80rpx;
}

.list_item .state {
  padding: 0 10rpx;
  background-color: #67C23A;
  font-size: 18rpx;
  line-height: 36rpx;
  border-radius: 4rpx;
  color: #fff;
  text-align: center;
}
.list_item .state.NOTARRIVE {
  background-color: var(--color-mian);
}
.list_item>.content {
  padding: 20rpx 25rpx;
}

.list_item .content>view {
  margin: 10rpx 0;
  display: flex;
}

.list_item .content text {
  width: 120rpx;
  color: #303133;
  margin-right: 24rpx;
}

.list_item .content view:not(.dep) {
  flex: 1;
  color: #606266;
}

.list_item .content .dep {
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: var(--color-mian);
  padding: 0 15rpx;
  border-radius: 4rpx;
}

.dialog {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
  top: 0;
  left: 0;
  z-index: 999;
}
.dialog > view {
  width: 80%;
  background-color: #fff;
  position: absolute;
  top: 30%;
  margin: 0 auto;
  left: 50%;
  transform: translatex(-50%);
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.dialog .dialog_input {
  padding: 0 30rpx;
  font-size: 32rpx;
}
.dialog .dialog_input text {
  color: #252525;
  line-height: 80rpx;
}
.dialog .dialog_input input {
  color: #252525;
  background: #FFFFFF;
  border: 1px solid var(--color-border);
  border-radius: 8rpx;
  margin-bottom: 100rpx;
  height: 60rpx;
  padding: 0 10rpx;
  line-height: 60rpx;
}
.dialog .dialog_btns {
  display: flex;
  align-items: center;
  padding: 40rpx;
}
.dialog .dialog_height {
  background: var(--color-mian);
  justify-content: space-between;
  text-align: center;
  line-height: 80rpx;
  position: relative;
  color: #fff;
  font-size: 32rpx;
}
.dialog .dialog_height image {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  padding: 26rpx;
  right: 0;
}
.dialog .dialog_btns button {
  width: 180rpx;
}
.dialog .dialog_btns button:first-child {
  background-color: #FFF;
  color: var(--color-mian);
  border: 1px solid var(--color-mian);
}